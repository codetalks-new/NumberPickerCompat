<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget"></style>

    <style name="Widget.NumberPicker">
        <item name="internalLayout">@layout/number_picker_with_selector_wheel</item>
        <item name="solidColor">@android:color/transparent</item>
        <item name="selectionDivider">@drawable/numberpicker_selection_divider</item>
        <item name="selectionDividerHeight">2dp</item>
        <item name="selectionDividersDistance">54dp</item>
        <item name="internalMinWidth">48dp</item>
        <item name="internalMaxWidth">64dp</item>
        <item name="internalMinHeight">100dp</item>
        <item name="internalMaxHeight">180dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">50dp</item>
        <item name="virtualButtonPressedDrawable">@drawable/item_background_holo_dark</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>
	<item name="numberPickerStyle" type="attr">@style/Widget.NumberPicker</item>
</resources>